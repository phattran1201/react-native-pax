{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2019"
  },
  "include": ["src/**/*", "example/src/**/*"],
  "exclude": ["node_modules", "lib", "example/node_modules"]
}
